    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.2",
    "express": "^4.17.1",
    "mocha": "^8.4.0",
    "npm-failsafe": "^0.4.3",
    "webdriverio": "^7.5.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
