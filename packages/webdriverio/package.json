{
  "name": "@serenity-js/webdriverio",
  "version": "2.28.1",
  "description": "Serenity/JS reporter and Screenplay Pattern library for WebdriverIO",
  "author": {
    "name": "Jan Molak",
    "email": "jan.molak@smartcodeltd.co.uk",
    "url": "https://janmolak.com"
  },
  "funding": {
    "url": "https://github.com/sponsors/serenity-js"
  },
  "homepage": "https://serenity-js.org",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "keywords": [
    "serenity-js",
    "ui",
    "frontend",
    "bdd",
    "tdd",
    "test",
    "testing",
    "wdio",
    "wdio-reporter"
  ],
  "scripts": {
    "clean": "rimraf .nyc_output lib target",
    "lint": "eslint --ext ts --config ../../.eslintrc.js",
    "test": "nyc --report-dir ../../target/coverage/webdriverio wdio ./wdio.conf.ts",
    "compile": "tsc --project tsconfig.json",
    "site": "esdoc -c .esdoc.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/serenity-js/serenity-js.git"
  },
  "bugs": {
    "url": "https://github.com/serenity-js/serenity-js/issues"
  },
  "engines": {
    "node": "^10 || ^12 || ^14",
    "npm": "^6 || ^7"
  },
  "dependencies": {
    "@serenity-js/core": "2.28.1",
    "@wdio/types": "^7.4.2",
    "@wdio/reporter": "^7.4.2",
    "deepmerge": "^4.2.2",
    "is-plain-object": "^5.0.0",
    "tiny-types": "^1.16.1"
  },
  "peerDependencies": {
    "@serenity-js/cucumber": "^2.28.0",
    "@serenity-js/jasmine": "^2.28.0",
    "@serenity-js/mocha": "^2.28.0",
    "@wdio/cli": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "@serenity-js/cucumber": {
      "optional": true
    },
    "@serenity-js/jasmine": {
      "optional": true
    },
    "@serenity-js/mocha": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/mocha": "^8.2.2",
    "@documentation/esdoc-template": "2.0.0",
    "@integration/testing-tools": "2.0.0",
    "@wdio/cli": "^7.5.7",
    "@wdio/local-runner": "^7.5.7",
    "@wdio/devtools-service": "^7.5.7",
    "@wdio/mocha-framework": "^7.5.3",
    "@wdio/dot-reporter": "^7.5.7",
    "mocha": "^8.4.0",
    "mocha-testdata": "^1.2.0",
    "webdriverio": "^7.5.7"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.d.ts",
      "lib",
      "node_modules",
      "spec"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json"
    ],
    "cache": true,
    "all": true
  }
}
